{# templates/session/_form.html.twig #}
{# Formulaire partagé pour création et édition de session #}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

<style>
    .form-section {
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-lg);
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }
    
    .form-section-title {
        font-size: 1rem;
        font-weight: 600;
        margin: 0 0 1.25rem 0;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid var(--color-border);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-text);
    }
    
    .form-section-title svg {
        color: var(--color-primary);
    }
    
    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
    }
    
    .form-grid-3 {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
    }
    
    @media (max-width: 768px) {
        .form-grid-3 {
            grid-template-columns: 1fr;
        }
    }
    
    .form-control {
        border: 1px solid var(--color-border);
        border-radius: var(--radius-md);
        padding: 0.625rem 0.875rem;
        font-size: 0.9375rem;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }
    
    .form-control:focus {
        border-color: var(--color-primary);
        box-shadow: 0 0 0 3px rgba(var(--color-primary-rgb), 0.15);
        outline: none;
    }
    
    .form-select {
        border: 1px solid var(--color-border);
        border-radius: var(--radius-md);
        padding: 0.625rem 0.875rem;
        font-size: 0.9375rem;
    }
    
    .form-label {
        font-weight: 500;
        margin-bottom: 0.375rem;
        font-size: 0.875rem;
    }
    
    .form-text {
        font-size: 0.75rem;
        color: var(--color-text-muted);
        margin-top: 0.25rem;
    }
    
    .form-check-label {
        font-weight: normal;
    }
    
    .form-control-color {
        width: 60px;
        height: 40px;
        padding: 0.25rem;
    }
    
    .color-preview {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .text-uppercase {
        text-transform: uppercase;
    }
    
    .btn-group-form {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--color-border);
    }
    
    .invalid-feedback {
        color: #dc3545;
        font-size: 0.8125rem;
        margin-top: 0.25rem;
    }
    
    .form-control.is-invalid,
    .form-select.is-invalid {
        border-color: #dc3545;
    }
</style>

{{ form_start(form, {'attr': {'class': 'session-form'}}) }}

{# ============================================
   SECTION IDENTIFICATION
   ============================================ #}
<div class="form-section">
    <h3 class="form-section-title">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 14.66V20a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h5.34"></path>
            <polygon points="18 2 22 6 12 16 8 16 8 12 18 2"></polygon>
        </svg>
        Identification
    </h3>
    
    <div class="form-grid">
        <div>
            {{ form_row(form.formation) }}
        </div>
        <div>
            {{ form_row(form.code) }}
        </div>
    </div>
    
    <div style="margin-top: 1rem;">
        {{ form_row(form.libelle) }}
    </div>
</div>

{# ============================================
   SECTION DATES
   ============================================ #}
<div class="form-section">
    <h3 class="form-section-title">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
        Dates de la session
    </h3>
    
    <div class="form-grid">
        <div>
            {{ form_row(form.dateDebut) }}
        </div>
        <div>
            {{ form_row(form.dateFin) }}
        </div>
    </div>
    
    <div class="form-grid" style="margin-top: 1rem;">
        <div>
            {{ form_row(form.dateDebutInscriptions) }}
        </div>
        <div>
            {{ form_row(form.dateFinInscriptions) }}
        </div>
    </div>
</div>

{# ============================================
   SECTION CAPACITÉ ET ORGANISATION
   ============================================ #}
<div class="form-section">
    <h3 class="form-section-title">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
            <circle cx="9" cy="7" r="4"></circle>
            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
        </svg>
        Capacité et organisation
    </h3>
    
    <div class="form-grid-3">
        <div>
            {{ form_row(form.effectifMin) }}
        </div>
        <div>
            {{ form_row(form.effectifMax) }}
        </div>
        <div>
            {{ form_row(form.modalite) }}
        </div>
    </div>
    
    <div class="form-grid" style="margin-top: 1rem;">
        <div>
            {{ form_row(form.lieu) }}
        </div>
        <div>
            {{ form_row(form.statut) }}
        </div>
    </div>
</div>

{# ============================================
   SECTION ENCADREMENT
   ============================================ #}
<div class="form-section">
    <h3 class="form-section-title">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
        </svg>
        Encadrement pédagogique
    </h3>
    
    <div class="form-grid">
        <div>
            {{ form_row(form.responsable) }}
        </div>
        <div>
            {{ form_row(form.formateurs) }}
        </div>
    </div>
</div>

{# ============================================
   SECTION AFFICHAGE ET DIVERS
   ============================================ #}
<div class="form-section">
    <h3 class="form-section-title">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="3"></circle>
            <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
        </svg>
        Options et divers
    </h3>
    
    <div class="form-grid">
        <div>
            <div class="color-preview">
                {{ form_row(form.couleur) }}
            </div>
        </div>
        <div style="display: flex; align-items: center; padding-top: 1.5rem;">
            {{ form_row(form.actif) }}
        </div>
    </div>
    
    <div style="margin-top: 1rem;">
        {{ form_row(form.commentaire) }}
    </div>
</div>

{# ============================================
   BOUTONS D'ACTION
   ============================================ #}
<div class="btn-group-form">
    <button type="submit" class="btn btn--primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
            <polyline points="17 21 17 13 7 13 7 21"></polyline>
            <polyline points="7 3 7 8 15 8"></polyline>
        </svg>
        {{ button_label|default('Enregistrer') }}
    </button>
    
    <a href="{{ path('app_session_index') }}" class="btn btn--ghost">
        Annuler
    </a>
</div>

{{ form_end(form) }}
