{% extends 'base.html.twig' %}

{% block title %}Nouveau motif d'absence{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
<section class="dashboard">
    <div class="container">
        {# En-t√™te #}
        <header class="dashboard__header">
            <div class="header-actions">
                <a href="{{ path('admin_motif_absence_index') }}" class="btn btn--secondary btn--sm">
                    ‚Üê Retour √† la liste
                </a>
            </div>
            <h1 class="dashboard__title">‚ûï Nouveau motif d'absence</h1>
            <p class="dashboard__subtitle">Cr√©er un nouveau motif de justification d'absence</p>
        </header>

        {# Formulaire #}
        <div class="tabs">
            <div class="tabs__content">
                {{ form_start(form, {'attr': {'class': 'form-modern'}}) }}
                
                <div class="form-grid">
                    <div class="form-group">
                        {{ form_label(form.libelle) }}
                        {{ form_widget(form.libelle) }}
                        {{ form_errors(form.libelle) }}
                        {{ form_help(form.libelle) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.code) }}
                        {{ form_widget(form.code) }}
                        {{ form_errors(form.code) }}
                        {{ form_help(form.code) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="form-grid form-grid--3">
                    <div class="form-group">
                        {{ form_label(form.icone) }}
                        {{ form_widget(form.icone) }}
                        {{ form_errors(form.icone) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.couleur) }}
                        {{ form_widget(form.couleur) }}
                        {{ form_errors(form.couleur) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.ordre) }}
                        {{ form_widget(form.ordre) }}
                        {{ form_errors(form.ordre) }}
                        {{ form_help(form.ordre) }}
                    </div>
                </div>

                <div class="form-grid">
                    <div class="form-group form-group--checkbox">
                        {{ form_widget(form.justificatifObligatoire) }}
                        {{ form_label(form.justificatifObligatoire) }}
                        {{ form_errors(form.justificatifObligatoire) }}
                        <div class="form-help">{{ form_help(form.justificatifObligatoire) }}</div>
                    </div>

                    <div class="form-group form-group--checkbox">
                        {{ form_widget(form.actif) }}
                        {{ form_label(form.actif) }}
                        {{ form_errors(form.actif) }}
                        <div class="form-help">{{ form_help(form.actif) }}</div>
                    </div>
                </div>

                <div class="form-actions">
                    <a href="{{ path('admin_motif_absence_index') }}" class="btn btn--secondary">
                        Annuler
                    </a>
                    <button type="submit" class="btn btn--primary">
                        üíæ Cr√©er le motif
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
