{% extends 'base.html.twig' %}

{% block title %}Modifier jour ferm√© - {{ calendrier.code }}{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
<style>
.section-card--danger {
    border-left: 4px solid #dc3545;
}

.danger-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
}

.danger-content p {
    margin: 0;
    color: var(--text-secondary, #666);
    flex: 1;
}
</style>
{% endblock %}

{% block body %}
<section class="dashboard">
    <div class="container container--narrow">
        {# En-t√™te #}
        <header class="dashboard__header">
            <div class="header-actions">
                <a href="{{ path('admin_calendrier_jours_fermes', {id: calendrier.id}) }}" class="btn btn--secondary btn--sm">
                    ‚Üê Retour aux jours ferm√©s
                </a>
            </div>
            <h1 class="dashboard__title">‚úèÔ∏è Modifier jour ferm√©</h1>
            <p class="dashboard__subtitle">
                {{ jourFerme.date|date('d/m/Y') }} - {{ jourFerme.libelle }}
            </p>
        </header>

        {# Formulaire #}
        <div class="form-container form-container--compact">
            {{ form_start(form, {'attr': {'class': 'admin-form'}}) }}
            
            <div class="form-section">
                <div class="form-group">
                    {{ form_label(form.date) }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control', 'min': calendrier.dateDebut|date('Y-m-d'), 'max': calendrier.dateFin|date('Y-m-d')}}) }}
                    <span class="form-help">
                        La date doit √™tre comprise entre le {{ calendrier.dateDebut|date('d/m/Y') }} 
                        et le {{ calendrier.dateFin|date('d/m/Y') }}.
                    </span>
                    {{ form_errors(form.date) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.libelle) }}
                    {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
                    {{ form_help(form.libelle) }}
                    {{ form_errors(form.libelle) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.type) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                    {{ form_help(form.type) }}
                    {{ form_errors(form.type) }}
                </div>
            </div>

            <div class="form-actions">
                <a href="{{ path('admin_calendrier_jours_fermes', {id: calendrier.id}) }}" class="btn btn--secondary">
                    Annuler
                </a>
                <button type="submit" class="btn btn--primary">
                    ‚úì Enregistrer les modifications
                </button>
            </div>

            {{ form_end(form) }}
        </div>

        {# Zone de danger #}
        <div class="section-card section-card--danger">
            <div class="section-card__header">
                <h2>‚ö†Ô∏è Zone de danger</h2>
            </div>
            <div class="danger-content">
                <p>
                    Supprimer ce jour ferm√© du calendrier.
                </p>
                <form action="{{ path('admin_jour_ferme_delete', {id: jourFerme.id}) }}" 
                      method="post"
                      onsubmit="return confirm('Supprimer ce jour ferm√© ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_jour_ferme_' ~ jourFerme.id) }}">
                    <button type="submit" class="btn btn--danger">
                        üóëÔ∏è Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}
