    // Mise √† jour dynamique du filtre session en fonction de la formation
    document.getElementById('filtreFormation').addEventListener('change', function() {
        // On pourrait impl√©menter un filtre AJAX ici pour les sessions
        // Pour l'instant, on soumet simplement le formulaire
    });
</script>
{% endblock %}
