{% extends 'base.html.twig' %}

{% block title %}Modifier la s√©ance - {{ jourSemaine }} {{ date|date('d/m/Y') }}{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
<style>
.form-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
}

.form-row {
    display: flex;
    gap: 1rem;
}

.form-row > * {
    flex: 1;
}

.form-group {
    margin-bottom: 1rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--text-primary, #333);
}

.form-control {
    width: 100%;
    padding: 0.5rem 0.75rem;
    border: 1px solid var(--border-color, #e0e0e0);
    border-radius: 4px;
    font-size: 1rem;
    transition: border-color 0.2s;
}

.form-control:focus {
    outline: none;
    border-color: var(--primary-color, #4a90a4);
    box-shadow: 0 0 0 3px rgba(74, 144, 164, 0.1);
}

.form-help {
    font-size: 0.85rem;
    color: var(--text-muted, #6c757d);
    margin-top: 0.25rem;
}

.alert--conflict {
    background: #fff3cd;
    border: 1px solid #ffc107;
    border-radius: 4px;
    padding: 1rem;
    margin-bottom: 1rem;
}

.alert--conflict ul {
    margin: 0.5rem 0 0 1.5rem;
    padding: 0;
}

.alert--info {
    background: #e7f3ff;
    border: 1px solid #b6d4fe;
    border-radius: 4px;
    padding: 1rem;
    margin-bottom: 1rem;
}

.btn-group-form {
    display: flex;
    gap: 0.5rem;
    margin-top: 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border-color, #e0e0e0);
}

.seance-info {
    background: var(--bg-light, #f8f9fa);
    padding: 1rem;
    border-radius: 4px;
    margin-bottom: 1.5rem;
}

.seance-info__item {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
}

.seance-info__item:last-child {
    margin-bottom: 0;
}

.seance-info__label {
    font-weight: 500;
    min-width: 120px;
}
</style>
{% endblock %}

{% block body %}
<section class="dashboard">
    <div class="container">
        {# En-t√™te #}
        <header class="dashboard__header">
            <div class="header-actions">
                <a href="{{ path('admin_calendrier_jour', {id: calendrier.id, date: dateStr}) }}" class="btn btn--secondary btn--sm">
                    ‚Üê Retour √† la journ√©e
                </a>
            </div>
            <h1 class="dashboard__title">‚úèÔ∏è Modifier la s√©ance</h1>
            <p class="dashboard__subtitle">{{ jourSemaine }} {{ date|date('d F Y') }} - {{ calendrier.libelle }}</p>
        </header>

        {# Info s√©ance li√©e √† un cr√©neau r√©current #}
        {% if seance.creneauRecurrent %}
        <div class="alert--info">
            <strong>‚ÑπÔ∏è S√©ance g√©n√©r√©e automatiquement</strong>
            <p style="margin: 0.5rem 0 0 0; font-size: 0.9rem;">
                Cette s√©ance a √©t√© g√©n√©r√©e depuis un cr√©neau r√©current. 
                Les modifications seront marqu√©es comme "manuelles" et ne seront pas √©cras√©es lors des prochaines g√©n√©rations.
            </p>
        </div>
        {% endif %}

        {# Info s√©ance d√©j√† modifi√©e #}
        {% if seance.modifieeDepuisCreneau %}
        <div class="alert--info">
            <strong>‚úèÔ∏è S√©ance d√©j√† modifi√©e manuellement</strong>
        </div>
        {% endif %}

        {# Alertes conflits #}
        {% if conflits|length > 0 %}
        <div class="alert--conflict">
            <strong>‚ö†Ô∏è Conflits d√©tect√©s :</strong>
            <ul>
                {% for conflit in conflits %}
                    <li>{{ conflit }}</li>
                {% endfor %}
            </ul>
            <p style="margin-top: 0.5rem; font-size: 0.9rem;">
                Vous pouvez ignorer ces conflits en cochant la case ci-dessous.
            </p>
        </div>
        {% endif %}

        {# Formulaire #}
        <div class="section-card">
            <div class="section-card__header">
                <h2>üìù Informations de la s√©ance</h2>
                <span class="status status--{{ seance.statut.badgeClass }}">
                    {{ seance.statut.icone }} {{ seance.statut.libelle }}
                </span>
            </div>

            {# R√©sum√© actuel #}
            <div class="seance-info">
                <div class="seance-info__item">
                    <span class="seance-info__label">Mati√®re :</span>
                    <span>{{ seance.sessionMatiere.matiere.libelle|default('Non d√©finie') }}</span>
                </div>
                <div class="seance-info__item">
                    <span class="seance-info__label">Horaires :</span>
                    <span>{{ seance.heureDebut|date('H:i') }} - {{ seance.heureFin|date('H:i') }}</span>
                </div>
                <div class="seance-info__item">
                    <span class="seance-info__label">Salle :</span>
                    <span>{{ seance.salle.libelle|default('Non d√©finie') }}</span>
                </div>
                <div class="seance-info__item">
                    <span class="seance-info__label">Formateur(s) :</span>
                    <span>
                        {% if seance.formateurs|length > 0 %}
                            {% for f in seance.formateurs %}{{ f.nomComplet }}{% if not loop.last %}, {% endif %}{% endfor %}
                        {% else %}
                            Non d√©fini
                        {% endif %}
                    </span>
                </div>
            </div>

            {{ form_start(form, {'attr': {'class': 'form-seance', 'novalidate': 'novalidate'}}) }}
                
                <div class="form-grid">
                    {# Session #}
                    <div class="form-group">
                        {{ form_label(form.session) }}
                        {{ form_widget(form.session) }}
                        {{ form_errors(form.session) }}
                    </div>

                    {# Mati√®re #}
                    <div class="form-group">
                        {{ form_label(form.sessionMatiere) }}
                        {{ form_widget(form.sessionMatiere) }}
                        {{ form_errors(form.sessionMatiere) }}
                    </div>
                </div>

                <div class="form-row">
                    {# Heure d√©but #}
                    <div class="form-group">
                        {{ form_label(form.heureDebut) }}
                        {{ form_widget(form.heureDebut) }}
                        {{ form_errors(form.heureDebut) }}
                    </div>

                    {# Heure fin #}
                    <div class="form-group">
                        {{ form_label(form.heureFin) }}
                        {{ form_widget(form.heureFin) }}
                        {{ form_errors(form.heureFin) }}
                    </div>
                </div>

                <div class="form-grid">
                    {# Salle #}
                    <div class="form-group">
                        {{ form_label(form.salle) }}
                        {{ form_widget(form.salle) }}
                        {{ form_errors(form.salle) }}
                    </div>

                    {# Statut #}
                    <div class="form-group">
                        {{ form_label(form.statut) }}
                        {{ form_widget(form.statut) }}
                        {{ form_errors(form.statut) }}
                    </div>
                </div>

                {# Formateurs #}
                <div class="form-group">
                    {{ form_label(form.formateurs) }}
                    {{ form_widget(form.formateurs) }}
                    <p class="form-help">{{ form.formateurs.vars.help|default('') }}</p>
                    {{ form_errors(form.formateurs) }}
                </div>

                {# Commentaire #}
                <div class="form-group">
                    {{ form_label(form.commentaire) }}
                    {{ form_widget(form.commentaire) }}
                    {{ form_errors(form.commentaire) }}
                </div>

                {# Ignorer conflits #}
                {% if conflits|length > 0 %}
                <div class="form-group">
                    <label>
                        <input type="checkbox" name="ignorer_conflits" value="1">
                        Ignorer les conflits et enregistrer quand m√™me
                    </label>
                </div>
                {% endif %}

                <div class="btn-group-form">
                    <a href="{{ path('admin_calendrier_jour', {id: calendrier.id, date: dateStr}) }}" class="btn btn--secondary">
                        Annuler
                    </a>
                    <button type="submit" class="btn btn--primary">
                        ‚úÖ Enregistrer les modifications
                    </button>
                </div>

            {{ form_end(form) }}
        </div>

        {# Zone de danger #}
        <div class="section-card" style="border-color: #e74c3c;">
            <div class="section-card__header">
                <h2 style="color: #e74c3c;">üóëÔ∏è Zone de danger</h2>
            </div>
            <p>Supprimer d√©finitivement cette s√©ance. Cette action est irr√©versible.</p>
            <form action="{{ path('admin_calendrier_jour_delete', {id: calendrier.id, date: dateStr, seanceId: seance.id}) }}" 
                  method="post"
                  onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette s√©ance ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete_seance_' ~ seance.id) }}">
                <button type="submit" class="btn btn--danger">
                    üóëÔ∏è Supprimer cette s√©ance
                </button>
            </form>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
<script>
// Rechargement dynamique des mati√®res et formateurs lors du changement de session
document.addEventListener('DOMContentLoaded', function() {
    const sessionSelect = document.getElementById('{{ form.session.vars.id }}');
    
    if (sessionSelect) {
        sessionSelect.addEventListener('change', function() {
            // Soumettre le formulaire pour recharger les options
            this.form.submit();
        });
    }
});
</script>
{% endblock %}
