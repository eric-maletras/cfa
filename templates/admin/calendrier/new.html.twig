{% extends 'base.html.twig' %}

{% block title %}Nouveau calendrier{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
<style>
.help-content ul {
    margin: 0;
    padding-left: 1.5rem;
}

.help-content li {
    margin-bottom: 0.5rem;
    color: var(--text-secondary, #666);
}

.help-content li:last-child {
    margin-bottom: 0;
}
</style>
{% endblock %}

{% block body %}
