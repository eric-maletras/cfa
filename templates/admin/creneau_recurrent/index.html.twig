{% extends 'base.html.twig' %}

{% block title %}Cr√©neaux horaires - Planning{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
<style>
/* Badges jours */
.jour-badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-weight: 600;
    font-size: 0.85rem;
}
.jour-lundi { background: #e3f2fd; color: #1565c0; }
.jour-mardi { background: #f3e5f5; color: #7b1fa2; }
.jour-mercredi { background: #e8f5e9; color: #2e7d32; }
.jour-jeudi { background: #fff3e0; color: #ef6c00; }
.jour-vendredi { background: #fce4ec; color: #c2185b; }

/* Badges semaine */
.semaine-badge {
    display: inline-block;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.8rem;
    font-weight: 500;
}
.semaine-A { background: #bbdefb; color: #1565c0; }
.semaine-B { background: #c8e6c9; color: #2e7d32; }
.semaine-all { background: #f5f5f5; color: #616161; }

/* Tags formateurs */
.formateur-tag {
    display: inline-block;
    padding: 0.15rem 0.35rem;
    background: #e8eaf6;
    color: #3949ab;
    border-radius: 3px;
    font-size: 0.8rem;
    margin-right: 0.25rem;
}

/* Ligne inactive */
.row-inactive {
    opacity: 0.6;
    background: #fafafa;
}

/* Filtres */
.filters-bar {
    padding: 1rem;
}
.filters-form {
    display: flex;
    gap: 1rem;
    align-items: center;
}
.filter-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}
.filter-group label {
    white-space: nowrap;
    font-weight: 500;
}
.filter-group select {
    min-width: 250px;
}

/* Actions */
.actions-col {
    width: 150px;
    text-align: center;
}
.btn-group {
    display: flex;
    gap: 0.25rem;
    justify-content: center;
}
.btn--icon {
    padding: 0.3rem 0.5rem;
    font-size: 1rem;
    line-height: 1;
}
</style>
{% endblock %}

{% block body %}
<section class="dashboard">
    <div class="container">
        {# En-t√™te #}
        <header class="dashboard__header">
            <div class="header-actions">
                <a href="{{ path('admin_planning') }}" class="btn btn--secondary btn--sm">
                    ‚Üê Retour au planning
                </a>
            </div>
            <h1 class="dashboard__title">üïê Cr√©neaux horaires r√©currents</h1>
            <p class="dashboard__subtitle">Gestion des cr√©neaux de cours r√©p√©titifs</p>
        </header>

        {# Actions #}
        <div class="section-card">
            <div class="section-card__header">
                <h2>Cr√©neaux</h2>
                <a href="{{ path('admin_creneau_new') }}" class="btn btn--primary">
                    + Nouveau cr√©neau
                </a>
            </div>

            {# Filtres #}
            <div class="filters-bar">
                <form method="get" class="filters-form">
                    <div class="filter-group">
                        <label for="session">Filtrer par session :</label>
                        <select name="session" id="session" class="form-control" onchange="this.form.submit()">
                            <option value="">-- Toutes les sessions --</option>
                            {% for session in sessions %}
                                <option value="{{ session.id }}" {% if sessionFiltre and sessionFiltre.id == session.id %}selected{% endif %}>
                                    {{ session.code }} - {{ session.libelle }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                </form>
            </div>
        </div>

        {# Liste des cr√©neaux group√©s par session #}
        {% if creneauxParSession is empty %}
            <div class="section-card">
                <div class="empty-state">
                    <p>Aucun cr√©neau r√©current d√©fini.</p>
                    <a href="{{ path('admin_creneau_new') }}" class="btn btn--primary">Cr√©er un premier cr√©neau</a>
                </div>
            </div>
        {% else %}
            {% for sessionId, data in creneauxParSession %}
                <div class="section-card">
                    <div class="section-card__header">
                        <h2>{{ data.session.code }} - {{ data.session.libelle }}</h2>
                        <a href="{{ path('admin_creneau_new', {session: data.session.id}) }}" class="btn btn--sm btn--outline">
                            + Ajouter
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>Jour</th>
                                    <th>Horaires</th>
                                    <th>Semaine</th>
                                    <th>Mati√®re</th>
                                    <th>Formateur(s)</th>
                                    <th>Salle</th>
                                    <th>P√©riode</th>
                                    <th>Statut</th>
                                    <th class="actions-col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for creneau in data.creneaux %}
                                    <tr class="{% if not creneau.actif %}row-inactive{% endif %}">
                                        <td>
                                            <span class="jour-badge jour-{{ creneau.jourSemaine.name|lower }}">
                                                {{ creneau.jourSemaine.libelle }}
                                            </span>
                                        </td>
                                        <td>
                                            {{ creneau.heureDebut|date('H:i') }} - {{ creneau.heureFin|date('H:i') }}
                                        </td>
                                        <td>
                                            {% if creneau.semaineType %}
                                                <span class="semaine-badge semaine-{{ creneau.semaineType.value }}">
                                                    {{ creneau.semaineType.value }}
                                                </span>
                                            {% else %}
                                                <span class="semaine-badge semaine-all">Toutes</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if creneau.sessionMatiere and creneau.sessionMatiere.matiere %}
                                                {{ creneau.sessionMatiere.matiere.code }}
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% for formateur in creneau.formateurs %}
                                                <span class="formateur-tag">{{ formateur.prenom|first }}.{{ formateur.nom }}</span>
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endfor %}
                                        </td>
                                        <td>
                                            {% if creneau.salle %}
                                                {{ creneau.salle.code }}
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-sm">
                                            {{ creneau.dateDebut|date('d/m/Y') }}<br>
                                            ‚Üí {{ creneau.dateFin|date('d/m/Y') }}
                                        </td>
                                        <td>
                                            {% if creneau.actif %}
                                                <span class="status status--success">Actif</span>
                                            {% else %}
                                                <span class="status status--danger">Inactif</span>
                                            {% endif %}
                                        </td>
                                        <td class="actions-col">
                                            <div class="btn-group">
                                                <a href="{{ path('admin_creneau_show', {id: creneau.id}) }}" 
                                                   class="btn btn--sm btn--outline" title="Voir">
                                                    üëÅÔ∏è
                                                </a>
                                                <a href="{{ path('admin_creneau_edit', {id: creneau.id}) }}" 
                                                   class="btn btn--sm btn--secondary" title="Modifier">
                                                    ‚úèÔ∏è
                                                </a>
                                                {% if creneau.actif %}
                                                <a href="{{ path('admin_creneau_generer', {id: creneau.id}) }}" 
                                                   class="btn btn--sm btn--success" title="G√©n√©rer les s√©ances">
                                                    üìÖ
                                                </a>
                                                {% endif %}
                                                <form action="{{ path('admin_creneau_toggle', {id: creneau.id}) }}" 
                                                      method="post" style="display:inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ creneau.id) }}">
                                                    <button type="submit" class="btn btn--sm btn--outline" 
                                                            title="{{ creneau.actif ? 'D√©sactiver' : 'Activer' }}">
                                                        {{ creneau.actif ? '‚è∏Ô∏è' : '‚ñ∂Ô∏è' }}
                                                    </button>
                                                </form>
                                                <form action="{{ path('admin_creneau_duplicate', {id: creneau.id}) }}" 
                                                      method="post" style="display:inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('duplicate' ~ creneau.id) }}">
                                                    <button type="submit" class="btn btn--sm btn--outline" title="Dupliquer">
                                                        üìã
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</section>
{% endblock %}
