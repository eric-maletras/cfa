{# templates/admin/sessions/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ session.code }} - {{ session.libelle }}{% endblock %}

{% block stylesheets %}
<style>
    .session-header {
        background: var(--color-surface);
        padding: 2rem;
        border-radius: var(--radius-lg);
        margin-bottom: 2rem;
        border: 1px solid var(--color-border);
    }
    
    .session-header-top {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
    }
    
    .session-title {
        font-size: 1.75rem;
        font-weight: 600;
        margin: 0 0 0.5rem 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .session-color-indicator {
        width: 16px;
        height: 16px;
        border-radius: 50%;
        flex-shrink: 0;
    }
    
    .session-code {
        font-family: var(--font-mono);
        font-size: 0.875rem;
        color: var(--color-text-muted);
        background: var(--color-background);
        padding: 0.25rem 0.5rem;
        border-radius: var(--radius-sm);
    }
    
    .session-formation {
        margin-top: 0.5rem;
    }
    
    .session-formation a {
        color: var(--color-primary);
        text-decoration: none;
    }
    
    .session-formation a:hover {
        text-decoration: underline;
    }
    
    .statut-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: var(--radius-full);
        font-size: 0.875rem;
        font-weight: 500;
    }
    
    .statut-planifiee { background: #e3f2fd; color: #1565c0; }
    .statut-inscriptions_ouvertes { background: #fff3e0; color: #e65100; }
    .statut-en_cours { background: #e8f5e9; color: #2e7d32; }
    .statut-terminee { background: #f3e5f5; color: #7b1fa2; }
    .statut-annulee { background: #ffebee; color: #c62828; }
    
    .session-actions {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
    
    .session-meta {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--color-border);
    }
    
    .meta-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }
    
    .meta-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--color-text-muted);
    }
    
    .meta-value {
        font-size: 1rem;
        font-weight: 500;
    }
    
    .section-card {
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-lg);
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }
    
    .section-title {
        font-size: 1rem;
        font-weight: 600;
        margin: 0 0 1rem 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-text);
    }
    
    .section-title svg {
        color: var(--color-primary);
    }
    
    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }
    
    .info-item {
        padding: 0.75rem;
        background: var(--color-background);
        border-radius: var(--radius-md);
    }
    
    .info-label {
        font-size: 0.75rem;
        color: var(--color-text-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.25rem;
    }
    
    .info-value {
        font-weight: 500;
    }
    
    .formateurs-list {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .formateur-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.5rem;
        background: var(--color-background);
        border-radius: var(--radius-md);
    }
    
    .formateur-avatar {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: var(--color-primary);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.875rem;
    }
    
    .formateur-info {
        flex: 1;
    }
    
    .formateur-name {
        font-weight: 500;
    }
    
    .formateur-role {
        font-size: 0.75rem;
        color: var(--color-text-muted);
    }
    
    .action-buttons {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid var(--color-border);
    }
    
    .btn-action {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: var(--radius-md);
        font-size: 0.875rem;
        font-weight: 500;
        text-decoration: none;
        cursor: pointer;
        border: none;
        transition: all 0.2s ease;
    }
    
    .btn-action--success {
        background: #e8f5e9;
        color: #2e7d32;
    }
    
    .btn-action--success:hover {
        background: #c8e6c9;
    }
    
    .btn-action--warning {
        background: #fff3e0;
        color: #e65100;
    }
    
    .btn-action--warning:hover {
        background: #ffe0b2;
    }
    
    .btn-action--danger {
        background: #ffebee;
        color: #c62828;
    }
    
    .btn-action--danger:hover {
        background: #ffcdd2;
    }
    
    .btn-action--primary {
        background: var(--color-primary);
        color: white;
    }
    
    .btn-action--primary:hover {
        opacity: 0.9;
    }
    
    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
        font-size: 0.875rem;
        color: var(--color-text-muted);
    }
    
    .breadcrumb a {
        color: var(--color-text-muted);
        text-decoration: none;
    }
    
    .breadcrumb a:hover {
        color: var(--color-primary);
    }
    
    .breadcrumb-separator {
        color: var(--color-border);
    }
    
    .timeline-date {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.75rem;
        background: var(--color-background);
        border-radius: var(--radius-md);
    }
    
    .timeline-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--color-primary);
        color: white;
    }
    
    .timeline-content {
        flex: 1;
    }
    
    .timeline-label {
        font-size: 0.75rem;
        color: var(--color-text-muted);
        text-transform: uppercase;
    }
    
    .timeline-value {
        font-weight: 500;
    }
    
    .comment-box {
        background: #fffde7;
        border-left: 4px solid #ffc107;
        padding: 1rem;
        border-radius: 0 var(--radius-md) var(--radius-md) 0;
        font-style: italic;
        color: #5d4037;
    }
    
    .delete-form {
        display: inline;
    }
    
    .two-columns {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 1.5rem;
    }
    
    @media (max-width: 992px) {
        .two-columns {
            grid-template-columns: 1fr;
        }
    }
    
    /* Styles pour la section Apprenants */
    .apprenants-stats {
        display: flex;
        justify-content: center;
        align-items: baseline;
        gap: 0.5rem;
        padding: 1.5rem;
        background: linear-gradient(135deg, var(--color-primary), #2980b9);
        border-radius: var(--radius-md);
        color: white;
        margin-bottom: 1rem;
    }
    
    .apprenants-count {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1;
    }
    
    .apprenants-max {
        font-size: 1.25rem;
        opacity: 0.8;
    }
    
    .apprenants-label {
        font-size: 0.875rem;
        opacity: 0.9;
    }
    
    .progress-bar {
        height: 8px;
        background: var(--color-background);
        border-radius: var(--radius-full);
        overflow: hidden;
        margin-bottom: 1rem;
    }
    
    .progress-bar-fill {
        height: 100%;
        background: var(--color-primary);
        border-radius: var(--radius-full);
        transition: width 0.3s ease;
    }
    
    .progress-bar-fill--warning {
        background: #ff9800;
    }
    
    .progress-bar-fill--danger {
        background: #f44336;
    }
    
    .progress-bar-fill--success {
        background: #4caf50;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    {# Fil d'Ariane #}
    <nav class="breadcrumb">
        <a href="{{ path('app_dashboard') }}">Tableau de bord</a>
        <span class="breadcrumb-separator">›</span>
        <a href="{{ path('admin_session_index') }}">Promotions</a>
        <span class="breadcrumb-separator">›</span>
        <span>{{ session.code }}</span>
    </nav>
    
    {# Messages flash #}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert--{{ type }}" style="margin-bottom: 1rem;">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    
    {# En-tête de la session #}
    <div class="session-header">
        <div class="session-header-top">
            <div>
                <h1 class="session-title">
                    {% if session.couleur %}
                        <span class="session-color-indicator" style="background-color: #{{ session.couleur }};"></span>
                    {% endif %}
                    {{ session.libelle }}
                </h1>
                <span class="session-code">{{ session.code }}</span>
                
                {% if session.formation %}
                    <p class="session-formation">
                        Formation : 
                        <a href="{{ path('admin_formation_index') }}">
                            {{ session.formation.intitule }}
                            {% if session.formation.codeRncp %}
                                ({{ session.formation.codeRncp }})
                            {% endif %}
                        </a>
                    </p>
                {% endif %}
            </div>
            
            <div>
                <span class="statut-badge statut-{{ session.statut }}">
                    {{ session.statutLibelle }}
                </span>
            </div>
        </div>
        
        <div class="session-meta">
            <div class="meta-item">
                <span class="meta-label">Période</span>
                <span class="meta-value">{{ session.periodeFormatee }}</span>
            </div>
            <div class="meta-item">
                <span class="meta-label">Durée</span>
                <span class="meta-value">{{ session.dureeMois }} mois ({{ session.dureeJours }} jours)</span>
            </div>
            <div class="meta-item">
                <span class="meta-label">Modalité</span>
                <span class="meta-value">{{ session.modaliteLibelle }}</span>
            </div>
            <div class="meta-item">
                <span class="meta-label">Capacité</span>
                <span class="meta-value">
                    {% if session.effectifMax %}
                        {{ session.effectifMin ?? '-' }} à {{ session.effectifMax }} places
                    {% else %}
                        Non définie
                    {% endif %}
                </span>
            </div>
        </div>
        
        {# Boutons d'action #}
        <div class="session-actions" style="margin-top: 1.5rem;">
            {# === BOUTON INSCRIPTIONS === #}
            <a href="{{ path('admin_inscription_index', {sessionId: session.id}) }}" class="btn btn--primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                Gérer les inscriptions
            </a>
            
            <a href="{{ path('admin_session_edit', {id: session.id}) }}" class="btn btn--secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
                Modifier
            </a>
            <a href="{{ path('admin_session_dupliquer', {id: session.id}) }}" class="btn btn--ghost">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                    <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                </svg>
                Dupliquer
            </a>
            <a href="{{ path('admin_session_index') }}" class="btn btn--ghost">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
                Retour à la liste
            </a>
        </div>
    </div>
    
    <div class="two-columns">
        {# Colonne principale #}
        <div>
            {# Dates importantes #}
            <div class="section-card">
                <h2 class="section-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                    Calendrier
                </h2>
                
                <div class="info-grid">
                    <div class="timeline-date">
                        <div class="timeline-icon" style="background: #4caf50;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                        </div>
                        <div class="timeline-content">
                            <div class="timeline-label">Début de promotion</div>
                            <div class="timeline-value">{{ session.dateDebut|date('d F Y') }}</div>
                        </div>
                    </div>
                    
                    <div class="timeline-date">
                        <div class="timeline-icon" style="background: #f44336;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"></circle>
                            </svg>
                        </div>
                        <div class="timeline-content">
                            <div class="timeline-label">Fin de promotion</div>
                            <div class="timeline-value">{{ session.dateFin|date('d F Y') }}</div>
                        </div>
                    </div>
                    
                    {% if session.dateDebutInscriptions %}
                    <div class="timeline-date">
                        <div class="timeline-icon" style="background: #ff9800;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="8.5" cy="7" r="4"></circle>
                                <line x1="20" y1="8" x2="20" y2="14"></line>
                                <line x1="23" y1="11" x2="17" y2="11"></line>
                            </svg>
                        </div>
                        <div class="timeline-content">
                            <div class="timeline-label">Ouverture inscriptions</div>
                            <div class="timeline-value">{{ session.dateDebutInscriptions|date('d F Y') }}</div>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if session.dateFinInscriptions %}
                    <div class="timeline-date">
                        <div class="timeline-icon" style="background: #9c27b0;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="8.5" cy="7" r="4"></circle>
                                <line x1="23" y1="11" x2="17" y2="11"></line>
                            </svg>
                        </div>
                        <div class="timeline-content">
                            <div class="timeline-label">Clôture inscriptions</div>
                            <div class="timeline-value">{{ session.dateFinInscriptions|date('d F Y') }}</div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
            
            {# Équipe pédagogique #}
            <div class="section-card">
                <h2 class="section-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                    Équipe pédagogique
                </h2>
                
                <div class="formateurs-list">
                    {% if session.responsable %}
                        <div class="formateur-item">
                            <div class="formateur-avatar">
                                {{ session.responsable.prenom|slice(0, 1)|upper }}{{ session.responsable.nom|slice(0, 1)|upper }}
                            </div>
                            <div class="formateur-info">
                                <div class="formateur-name">{{ session.responsable.prenom }} {{ session.responsable.nom }}</div>
                                <div class="formateur-role">Responsable pédagogique</div>
                            </div>
                        </div>
                    {% endif %}
                    
                    {% for formateur in session.formateurs %}
                        {% if formateur != session.responsable %}
                        <div class="formateur-item">
                            <div class="formateur-avatar" style="background: var(--color-secondary);">
                                {{ formateur.prenom|slice(0, 1)|upper }}{{ formateur.nom|slice(0, 1)|upper }}
                            </div>
                            <div class="formateur-info">
                                <div class="formateur-name">{{ formateur.prenom }} {{ formateur.nom }}</div>
                                <div class="formateur-role">Formateur intervenant</div>
                            </div>
                        </div>
                        {% endif %}
                    {% endfor %}
                    
                    {% if not session.responsable and session.formateurs|length == 0 %}
                        <p style="color: var(--color-text-muted); font-style: italic;">
                            Aucun formateur assigné à cette promotion.
                        </p>
                    {% endif %}
                </div>
            </div>
            
            {# Commentaire #}
            {% if session.commentaire %}
            <div class="section-card">
                <h2 class="section-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                    </svg>
                    Notes internes
                </h2>
                <div class="comment-box">
                    {{ session.commentaire|nl2br }}
                </div>
            </div>
            {% endif %}
        </div>
        
        {# Colonne latérale #}
        <div>
            {# === SECTION APPRENANTS === #}
            <div class="section-card">
                <h2 class="section-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                    Apprenants inscrits
                </h2>
                
                {# Statistiques d'effectif #}
                {% set nombreInscrits = session.nombreInscrits|default(0) %}
                {% set effectifMax = session.effectifMax %}
                {% set tauxRemplissage = effectifMax ? (nombreInscrits / effectifMax * 100)|round : 0 %}
                
                <div class="apprenants-stats">
                    <span class="apprenants-count">{{ nombreInscrits }}</span>
                    {% if effectifMax %}
                        <span class="apprenants-max">/ {{ effectifMax }}</span>
                    {% endif %}
                    <span class="apprenants-label">inscrit(s)</span>
                </div>
                
                {% if effectifMax %}
                    <div class="progress-bar">
                        {% set progressClass = '' %}
                        {% if tauxRemplissage >= 100 %}
                            {% set progressClass = 'progress-bar-fill--danger' %}
                        {% elseif tauxRemplissage >= 80 %}
                            {% set progressClass = 'progress-bar-fill--warning' %}
                        {% elseif tauxRemplissage >= 50 %}
                            {% set progressClass = 'progress-bar-fill--success' %}
                        {% endif %}
                        <div class="progress-bar-fill {{ progressClass }}" style="width: {{ tauxRemplissage > 100 ? 100 : tauxRemplissage }}%;"></div>
                    </div>
                    
                    <p style="text-align: center; font-size: 0.875rem; color: var(--color-text-muted); margin-bottom: 1rem;">
                        {% if session.placesRestantes is defined and session.placesRestantes is not null %}
                            {% if session.placesRestantes > 0 %}
                                {{ session.placesRestantes }} place(s) restante(s)
                            {% else %}
                                <strong style="color: #f44336;">Complet</strong>
                            {% endif %}
                        {% else %}
                            {{ tauxRemplissage }}% de remplissage
                        {% endif %}
                    </p>
                {% endif %}
                
                <a href="{{ path('admin_inscription_index', {sessionId: session.id}) }}" class="btn-action btn-action--primary" style="width: 100%; justify-content: center;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="8.5" cy="7" r="4"></circle>
                        <line x1="20" y1="8" x2="20" y2="14"></line>
                        <line x1="23" y1="11" x2="17" y2="11"></line>
                    </svg>
                    Gérer les inscriptions
                </a>
            </div>
            
            {# Informations générales #}
            <div class="section-card">
                <h2 class="section-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="16" x2="12" y2="12"></line>
                        <line x1="12" y1="8" x2="12.01" y2="8"></line>
                    </svg>
                    Informations
                </h2>
                
                <div style="display: flex; flex-direction: column; gap: 1rem;">
                    <div class="info-item">
                        <div class="info-label">Lieu</div>
                        <div class="info-value">{{ session.lieu ?? 'Non défini' }}</div>
                    </div>
                    
                    <div class="info-item">
                        <div class="info-label">Effectif minimum</div>
                        <div class="info-value">{{ session.effectifMin ?? '-' }} personnes</div>
                    </div>
                    
                    <div class="info-item">
                        <div class="info-label">Effectif maximum</div>
                        <div class="info-value">{{ session.effectifMax ?? '-' }} personnes</div>
                    </div>
                    
                    <div class="info-item">
                        <div class="info-label">Créée le</div>
                        <div class="info-value">{{ session.createdAt|date('d/m/Y à H:i') }}</div>
                    </div>
                    
                    {% if session.updatedAt %}
                    <div class="info-item">
                        <div class="info-label">Modifiée le</div>
                        <div class="info-value">{{ session.updatedAt|date('d/m/Y à H:i') }}</div>
                    </div>
                    {% endif %}
                </div>
            </div>
            
            {# Actions de workflow #}
            <div class="section-card">
                <h2 class="section-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
                    </svg>
                    Actions rapides
                </h2>
                
                <div class="action-buttons">
                    {% if session.statut == 'planifiee' %}
                        <form action="{{ path('admin_session_ouvrir_inscriptions', {id: session.id}) }}" method="post" class="delete-form">
                            <input type="hidden" name="_token" value="{{ csrf_token('ouvrir' ~ session.id) }}">
                            <button type="submit" class="btn-action btn-action--success">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="8.5" cy="7" r="4"></circle>
                                    <line x1="20" y1="8" x2="20" y2="14"></line>
                                    <line x1="23" y1="11" x2="17" y2="11"></line>
                                </svg>
                                Ouvrir les inscriptions
                            </button>
                        </form>
                    {% endif %}
                    
                    {% if session.statut in ['planifiee', 'inscriptions_ouvertes'] %}
                        <form action="{{ path('admin_session_demarrer', {id: session.id}) }}" method="post" class="delete-form">
                            <input type="hidden" name="_token" value="{{ csrf_token('demarrer' ~ session.id) }}">
                            <button type="submit" class="btn-action btn-action--success">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polygon points="5 3 19 12 5 21 5 3"></polygon>
                                </svg>
                                Démarrer la promotion
                            </button>
                        </form>
                    {% endif %}
                    
                    {% if session.statut == 'en_cours' %}
                        <form action="{{ path('admin_session_terminer', {id: session.id}) }}" method="post" class="delete-form">
                            <input type="hidden" name="_token" value="{{ csrf_token('terminer' ~ session.id) }}">
                            <button type="submit" class="btn-action btn-action--warning">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <rect x="6" y="4" width="4" height="16"></rect>
                                    <rect x="14" y="4" width="4" height="16"></rect>
                                </svg>
                                Terminer la promotion
                            </button>
                        </form>
                    {% endif %}
                    
                    {% if session.statut in ['planifiee', 'inscriptions_ouvertes'] %}
                        <form action="{{ path('admin_session_annuler', {id: session.id}) }}" method="post" class="delete-form"
                              onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette promotion ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('annuler' ~ session.id) }}">
                            <button type="submit" class="btn-action btn-action--danger">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <line x1="18" y1="6" x2="6" y2="18"></line>
                                    <line x1="6" y1="6" x2="18" y2="18"></line>
                                </svg>
                                Annuler la promotion
                            </button>
                        </form>
                    {% endif %}
                </div>
                
                {# Suppression #}
                {% if is_granted('ROLE_ADMIN') and session.statut != 'en_cours' %}
                <div style="margin-top: 1.5rem; padding-top: 1rem; border-top: 1px solid var(--color-border);">
                    <form action="{{ path('admin_session_delete', {id: session.id}) }}" method="post" class="delete-form"
                          onsubmit="return confirm('Êtes-vous sûr de vouloir désactiver cette promotion ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ session.id) }}">
                        <button type="submit" class="btn btn--danger btn--sm" style="width: 100%;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="3 6 5 6 21 6"></polyline>
                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            </svg>
                            Désactiver la promotion
                        </button>
                    </form>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
