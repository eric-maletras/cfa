{# templates/admin/sessions/formateurs.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}√âquipe p√©dagogique - {{ session.code }}{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: var(--spacing-xl);
        flex-wrap: wrap;
        gap: var(--spacing-md);
    }
    
    .page-header__info h1 {
        margin: 0 0 var(--spacing-xs) 0;
        font-size: 1.5rem;
    }
    
    .page-header__info p {
        margin: 0;
        color: var(--color-text-secondary);
    }
    
    .two-columns {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--spacing-xl);
    }
    
    @media (max-width: 992px) {
        .two-columns {
            grid-template-columns: 1fr;
        }
    }
    
    .section-card {
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-lg);
        overflow: hidden;
    }
    
    .section-card__header {
        padding: var(--spacing-lg);
        border-bottom: 1px solid var(--color-border);
        background: var(--color-background);
    }
    
    .section-card__header h2 {
        margin: 0;
        font-size: 1.125rem;
        display: flex;
        align-items: center;
        gap: var(--spacing-sm);
    }
    
    .section-card__body {
        padding: var(--spacing-lg);
    }
    
    .formateur-card {
        display: flex;
        align-items: center;
        gap: var(--spacing-md);
        padding: var(--spacing-md);
        background: var(--color-background);
        border-radius: var(--radius-md);
        margin-bottom: var(--spacing-sm);
        transition: all 0.2s ease;
    }
    
    .formateur-card:hover {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }
    
    .formateur-card--responsable {
        border-left: 4px solid var(--color-primary);
        background: #e3f2fd;
    }
    
    .formateur-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: var(--color-primary);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 1rem;
        flex-shrink: 0;
    }
    
    .formateur-avatar--secondary {
        background: var(--color-secondary);
    }
    
    .formateur-info {
        flex: 1;
        min-width: 0;
    }
    
    .formateur-name {
        font-weight: 600;
        margin-bottom: 2px;
    }
    
    .formateur-email {
        font-size: 0.875rem;
        color: var(--color-text-secondary);
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    
    .formateur-badge {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 2px 8px;
        background: var(--color-primary);
        color: white;
        border-radius: var(--radius-full);
        font-size: 0.75rem;
        font-weight: 500;
        margin-top: 4px;
    }
    
    .formateur-actions {
        display: flex;
        gap: var(--spacing-xs);
        flex-shrink: 0;
    }
    
    .btn-icon {
        width: 36px;
        height: 36px;
        border-radius: var(--radius-md);
        border: 1px solid var(--color-border);
        background: var(--color-surface);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
        color: var(--color-text-secondary);
    }
    
    .btn-icon:hover {
        border-color: var(--color-primary);
        color: var(--color-primary);
    }
    
    .btn-icon--danger:hover {
        border-color: var(--color-danger);
        color: var(--color-danger);
        background: #ffebee;
    }
    
    .btn-icon--success:hover {
        border-color: var(--color-success);
        color: var(--color-success);
        background: #e8f5e9;
    }
    
    .add-formateur-form {
        display: flex;
        gap: var(--spacing-sm);
        margin-bottom: var(--spacing-lg);
    }
    
    .add-formateur-form select {
        flex: 1;
        padding: var(--spacing-sm) var(--spacing-md);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-md);
        font-size: 1rem;
        background: var(--color-surface);
    }
    
    .empty-state {
        text-align: center;
        padding: var(--spacing-xl);
        color: var(--color-text-secondary);
    }
    
    .empty-state svg {
        width: 64px;
        height: 64px;
        margin-bottom: var(--spacing-md);
        opacity: 0.5;
    }
    
    .responsable-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: var(--spacing-lg);
        border-radius: var(--radius-lg);
        margin-bottom: var(--spacing-xl);
    }
    
    .responsable-section h3 {
        margin: 0 0 var(--spacing-md) 0;
        font-size: 1rem;
        opacity: 0.9;
    }
    
    .responsable-current {
        display: flex;
        align-items: center;
        gap: var(--spacing-md);
        padding: var(--spacing-md);
        background: rgba(255, 255, 255, 0.15);
        border-radius: var(--radius-md);
        margin-bottom: var(--spacing-md);
    }
    
    .responsable-current .formateur-avatar {
        background: white;
        color: #667eea;
    }
    
    .responsable-form {
        display: flex;
        gap: var(--spacing-sm);
    }
    
    .responsable-form select {
        flex: 1;
        padding: var(--spacing-sm) var(--spacing-md);
        border: none;
        border-radius: var(--radius-md);
        font-size: 0.875rem;
        background: rgba(255, 255, 255, 0.9);
    }
    
    .responsable-form .btn {
        white-space: nowrap;
    }
    
    .stats-bar {
        display: flex;
        gap: var(--spacing-lg);
        padding: var(--spacing-md) var(--spacing-lg);
        background: var(--color-background);
        border-radius: var(--radius-md);
        margin-bottom: var(--spacing-lg);
    }
    
    .stat-item {
        text-align: center;
    }
    
    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--color-primary);
    }
    
    .stat-label {
        font-size: 0.75rem;
        color: var(--color-text-secondary);
        text-transform: uppercase;
    }
    
    .session-info-banner {
        display: flex;
        align-items: center;
        gap: var(--spacing-md);
        padding: var(--spacing-md) var(--spacing-lg);
        background: var(--color-background);
        border-radius: var(--radius-md);
        margin-bottom: var(--spacing-lg);
        border-left: 4px solid var(--color-primary);
    }
    
    .session-info-banner__icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    
    .session-info-banner__content {
        flex: 1;
    }
    
    .session-info-banner__title {
        font-weight: 600;
        margin-bottom: 2px;
    }
    
    .session-info-banner__subtitle {
        font-size: 0.875rem;
        color: var(--color-text-secondary);
    }

    .alert {
        padding: var(--spacing-md) var(--spacing-lg);
        border-radius: var(--radius-md);
        margin-bottom: var(--spacing-md);
    }
    
    .alert--success {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
    
    .alert--error {
        background: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
    
    .alert--warning {
        background: #fff3cd;
        color: #856404;
        border: 1px solid #ffeeba;
    }
    
    .alert--info {
        background: #d1ecf1;
        color: #0c5460;
        border: 1px solid #bee5eb;
    }
</style>
{% endblock %}

{% block body %}
<section class="dashboard">
    <div class="container">
        {# En-t√™te de page #}
        <div class="page-header">
            <div class="page-header__info">
                <h1>üë• √âquipe p√©dagogique</h1>
                <p>G√©rez les formateurs de la promotion {{ session.code }}</p>
            </div>
            <div class="page-header__actions">
                <a href="{{ path('admin_session_show', {id: session.id}) }}" class="btn btn--secondary">
                    ‚Üê Retour √† la session
                </a>
            </div>
        </div>

        {# Messages flash #}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert--{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {# Bandeau d'information de la session #}
        <div class="session-info-banner">
            <div class="session-info-banner__icon" style="background: {% if session.couleur %}#{{ session.couleur }}{% else %}var(--color-primary){% endif %}; color: white;">
                üìö
            </div>
            <div class="session-info-banner__content">
                <div class="session-info-banner__title">{{ session.libelle }}</div>
                <div class="session-info-banner__subtitle">
                    {{ session.formation.intitule }} ‚Ä¢ {{ session.periodeFormatee }} ‚Ä¢ 
                    <span class="badge badge--{{ session.statut == 'en_cours' ? 'success' : (session.statut == 'planifiee' ? 'info' : 'secondary') }}">
                        {{ session.statutLibelle }}
                    </span>
                </div>
            </div>
        </div>

        {# Section Responsable P√©dagogique #}
        <div class="responsable-section">
            <h3>üéì Responsable p√©dagogique</h3>
            
            {% if session.responsable %}
                <div class="responsable-current">
                    <div class="formateur-avatar">
                        {{ session.responsable.prenom|slice(0, 1)|upper }}{{ session.responsable.nom|slice(0, 1)|upper }}
                    </div>
                    <div class="formateur-info">
                        <div class="formateur-name">{{ session.responsable.nomComplet }}</div>
                        <div class="formateur-email" style="color: rgba(255,255,255,0.8);">{{ session.responsable.email }}</div>
                    </div>
                </div>
            {% endif %}
            
            <form action="{{ path('admin_session_definir_responsable', {id: session.id}) }}" method="post" class="responsable-form">
                <input type="hidden" name="_token" value="{{ csrf_token('definir_responsable' ~ session.id) }}">
                <select name="responsable_id">
                    <option value="">-- Aucun responsable --</option>
                    {% for formateur in formateursAffectes %}
                        <option value="{{ formateur.id }}" {% if session.responsable and session.responsable.id == formateur.id %}selected{% endif %}>
                            {{ formateur.nomComplet }}
                        </option>
                    {% endfor %}
                </select>
                <button type="submit" class="btn btn--primary btn--sm">
                    {% if session.responsable %}Modifier{% else %}D√©finir{% endif %}
                </button>
            </form>
            
            {% if formateursAffectes is empty %}
                <p style="opacity: 0.8; font-size: 0.875rem; margin-top: var(--spacing-sm);">
                    ‚ö†Ô∏è Ajoutez d'abord des formateurs √† l'√©quipe pour pouvoir d√©signer un responsable.
                </p>
            {% endif %}
        </div>

        {# Statistiques #}
        <div class="stats-bar">
            <div class="stat-item">
                <div class="stat-value">{{ formateursAffectes|length }}</div>
                <div class="stat-label">Formateurs affect√©s</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">{{ formateursDisponibles|length }}</div>
                <div class="stat-label">Formateurs disponibles</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">{{ session.responsable ? '‚úì' : '‚úó' }}</div>
                <div class="stat-label">Responsable d√©sign√©</div>
            </div>
        </div>

        <div class="two-columns">
            {# Colonne gauche : Formateurs affect√©s #}
            <div class="section-card">
                <div class="section-card__header">
                    <h2>
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                        √âquipe actuelle ({{ formateursAffectes|length }})
                    </h2>
                </div>
                <div class="section-card__body">
                    {% if formateursAffectes is empty %}
                        <div class="empty-state">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" r="4"></circle>
                                <line x1="17" y1="11" x2="23" y2="11"></line>
                            </svg>
                            <p>Aucun formateur affect√© √† cette promotion</p>
                            <p style="font-size: 0.875rem;">S√©lectionnez des formateurs dans la liste de droite</p>
                        </div>
                    {% else %}
                        {% for formateur in formateursAffectes %}
                            <div class="formateur-card {% if session.responsable and session.responsable.id == formateur.id %}formateur-card--responsable{% endif %}">
                                <div class="formateur-avatar {% if session.responsable and session.responsable.id != formateur.id %}formateur-avatar--secondary{% endif %}">
                                    {{ formateur.prenom|slice(0, 1)|upper }}{{ formateur.nom|slice(0, 1)|upper }}
                                </div>
                                <div class="formateur-info">
                                    <div class="formateur-name">
                                        {{ formateur.nomComplet }}
                                    </div>
                                    <div class="formateur-email">{{ formateur.email }}</div>
                                    {% if session.responsable and session.responsable.id == formateur.id %}
                                        <span class="formateur-badge">
                                            ‚≠ê Responsable p√©dagogique
                                        </span>
                                    {% endif %}
                                </div>
                                <div class="formateur-actions">
                                    {# Voir la fiche #}
                                    <a href="{{ path('admin_user_show', {id: formateur.id}) }}" 
                                       class="btn-icon" 
                                       title="Voir la fiche">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                            <circle cx="12" cy="12" r="3"></circle>
                                        </svg>
                                    </a>
                                    
                                    {# D√©finir comme responsable (si pas d√©j√† responsable) #}
                                    {% if not session.responsable or session.responsable.id != formateur.id %}
                                        <form action="{{ path('admin_session_definir_responsable', {id: session.id}) }}" method="post" style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('definir_responsable' ~ session.id) }}">
                                            <input type="hidden" name="responsable_id" value="{{ formateur.id }}">
                                            <button type="submit" class="btn-icon btn-icon--success" title="D√©finir comme responsable">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                                                </svg>
                                            </button>
                                        </form>
                                    {% endif %}
                                    
                                    {# Retirer de l'√©quipe #}
                                    <form action="{{ path('admin_session_formateur_retirer', {id: session.id, formateurId: formateur.id}) }}" 
                                          method="post" 
                                          style="display: inline;"
                                          onsubmit="return confirm('Retirer {{ formateur.nomComplet|e('js') }} de l\'√©quipe p√©dagogique ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('retirer_formateur' ~ formateur.id) }}">
                                        <button type="submit" class="btn-icon btn-icon--danger" title="Retirer de l'√©quipe">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <line x1="18" y1="6" x2="6" y2="18"></line>
                                                <line x1="6" y1="6" x2="18" y2="18"></line>
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>

            {# Colonne droite : Formateurs disponibles #}
            <div class="section-card">
                <div class="section-card__header">
                    <h2>
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="8.5" cy="7" r="4"></circle>
                            <line x1="20" y1="8" x2="20" y2="14"></line>
                            <line x1="23" y1="11" x2="17" y2="11"></line>
                        </svg>
                        Formateurs disponibles ({{ formateursDisponibles|length }})
                    </h2>
                </div>
                <div class="section-card__body">
                    {# Formulaire d'ajout rapide #}
                    {% if formateursDisponibles is not empty %}
                        <form action="{{ path('admin_session_formateur_ajouter', {id: session.id}) }}" method="post" class="add-formateur-form">
                            <input type="hidden" name="_token" value="{{ csrf_token('ajouter_formateur' ~ session.id) }}">
                            <select name="formateur_id" required>
                                <option value="">-- S√©lectionner un formateur --</option>
                                {% for formateur in formateursDisponibles %}
                                    <option value="{{ formateur.id }}">
                                        {{ formateur.nomComplet }} ({{ formateur.email }})
                                    </option>
                                {% endfor %}
                            </select>
                            <button type="submit" class="btn btn--primary">
                                + Ajouter
                            </button>
                        </form>
                    {% endif %}

                    {% if formateursDisponibles is empty %}
                        <div class="empty-state">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                <polyline points="22 4 12 14.01 9 11.01"></polyline>
                            </svg>
                            <p>Tous les formateurs sont d√©j√† affect√©s</p>
                            <a href="{{ path('admin_user_index', {role: 'ROLE_FORMATEUR'}) }}" class="btn btn--secondary btn--sm" style="margin-top: var(--spacing-sm);">
                                G√©rer les formateurs
                            </a>
                        </div>
                    {% else %}
                        {# Liste des formateurs disponibles #}
                        {% for formateur in formateursDisponibles %}
                            <div class="formateur-card">
                                <div class="formateur-avatar formateur-avatar--secondary">
                                    {{ formateur.prenom|slice(0, 1)|upper }}{{ formateur.nom|slice(0, 1)|upper }}
                                </div>
                                <div class="formateur-info">
                                    <div class="formateur-name">{{ formateur.nomComplet }}</div>
                                    <div class="formateur-email">{{ formateur.email }}</div>
                                </div>
                                <div class="formateur-actions">
                                    {# Ajouter directement #}
                                    <form action="{{ path('admin_session_formateur_ajouter', {id: session.id}) }}" method="post" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('ajouter_formateur' ~ session.id) }}">
                                        <input type="hidden" name="formateur_id" value="{{ formateur.id }}">
                                        <button type="submit" class="btn btn--primary btn--sm">
                                            + Ajouter
                                        </button>
                                    </form>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
