{% extends 'base.html.twig' %}

{% block title %}S√©ance du {{ seance.date|date('d/m/Y') }} - {{ seance.sessionMatiere.matiere.libelle|default('D√©tails') }}{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
<style>
/* ========================================
   D√âTAIL S√âANCE
   ======================================== */
.seance-detail {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 1.5rem;
}

@media (max-width: 992px) {
    .seance-detail {
        grid-template-columns: 1fr;
    }
}

/* En-t√™te s√©ance */
.seance-header {
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-light));
    color: white;
    padding: 2rem;
    border-radius: var(--border-radius-lg);
    margin-bottom: 1.5rem;
}

.seance-header__badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255,255,255,0.2);
    border-radius: 20px;
    margin-bottom: 1rem;
    font-size: 0.9rem;
}

.seance-header__title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.seance-header__subtitle {
    font-size: 1.1rem;
    opacity: 0.9;
}

.seance-header__date {
    margin-top: 1rem;
    font-size: 1.25rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

/* Infos principales */
.info-section {
    margin-bottom: 1rem;
}

.info-section__title {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.75rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-primary);
    display: inline-block;
}

.info-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.info-item {
    display: flex;
    gap: 1rem;
    padding: 0.75rem;
    background: var(--color-off-white);
    border-radius: var(--border-radius);
}

.info-item__icon {
    font-size: 1.5rem;
    flex-shrink: 0;
}

.info-item__content {
    flex: 1;
}

.info-item__label {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin-bottom: 0.25rem;
}

.info-item__value {
    font-weight: 500;
}

/* Actions panel */
.actions-panel {
    position: sticky;
    top: 100px;
}

.actions-card {
    background: white;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow);
    overflow: hidden;
}

.actions-card__header {
    padding: 1rem 1.25rem;
    background: var(--color-off-white);
    border-bottom: 1px solid var(--border-color);
}

.actions-card__title {
    font-weight: 600;
    margin: 0;
}

.actions-card__body {
    padding: 1.25rem;
}

.action-button {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    width: 100%;
    padding: 1rem;
    margin-bottom: 0.75rem;
    background: var(--color-off-white);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius);
    text-decoration: none;
    color: var(--color-text-primary);
    transition: all 0.2s;
    text-align: left;
    cursor: pointer;
    font-family: inherit;
    font-size: inherit;
}

.action-button:hover {
    background: #e3f2fd;
    border-color: var(--color-primary);
    color: var(--color-primary);
}

.action-button:last-child {
    margin-bottom: 0;
}

.action-button--primary {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
}

.action-button--primary:hover {
    background: var(--color-primary-dark);
    color: white;
}

.action-button--success {
    background: #e8f5e9;
    border-color: #28a745;
    color: #28a745;
}

.action-button--success:hover {
    background: #28a745;
    color: white;
}

.action-button--disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

.action-button--disabled:hover {
    background: var(--color-off-white);
    border-color: var(--border-color);
    color: var(--color-text-primary);
}

.action-button__icon {
    font-size: 1.25rem;
}

.action-button__text {
    flex: 1;
}

.action-button__desc {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin-top: 0.25rem;
}

/* Changement de statut */
.statut-actions {
    padding: 1rem;
    background: #f8f9fa;
    border-top: 1px solid var(--border-color);
}

.statut-actions__title {
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--color-text-secondary);
}

.statut-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

/* Liste apprentis */
.apprentis-list {
    max-height: 400px;
    overflow-y: auto;
}

.apprenti-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    border-bottom: 1px solid var(--border-color);
}

.apprenti-item:last-child {
    border-bottom: none;
}

.apprenti-item__avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-primary);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 0.9rem;
    flex-shrink: 0;
}

.apprenti-item__info {
    flex: 1;
}

.apprenti-item__name {
    font-weight: 500;
}

.apprenti-item__email {
    font-size: 0.85rem;
    color: var(--color-text-muted);
}

/* Commentaire */
.commentaire-box {
    padding: 1rem;
    background: #fff8e1;
    border-left: 4px solid #ffc107;
    border-radius: var(--border-radius);
    margin-top: 1rem;
}

.commentaire-box__title {
    font-weight: 600;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}
</style>
{% endblock %}

{% block body %}
