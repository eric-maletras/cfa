{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<section class="dashboard">
    <div class="container">
        <header class="dashboard__header">
            <h1 class="dashboard__title">
                Bienvenue, {{ app.user.prenom }} {{ app.user.nom }}
            </h1>
            <p class="dashboard__subtitle">Que souhaitez-vous faire aujourd'hui ?</p>
        </header>
        
        {% if modules is not empty %}
            <div class="dashboard__modules">
                {% for module in modules %}
                    <a href="{{ path('app_module', {slug: module.route}) }}" class="module-card module-card--{{ module.couleur }}">
                        <div class="module-card__icon">
                            {{ include('icons/_icons.html.twig', {icon: module.icone}) }}
                        </div>
                        <h3 class="module-card__title">{{ module.nom }}</h3>
                        {% if module.description %}
                            <p class="module-card__description">{{ module.description }}</p>
                        {% endif %}
                    </a>
                {% endfor %}
            </div>
        {% else %}
            <div class="dashboard__empty">
                <p>Aucun module n'est disponible pour votre profil.</p>
            </div>
        {% endif %}
    </div>
</section>
{% endblock %}
