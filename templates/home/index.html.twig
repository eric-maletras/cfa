{# templates/home/index.html.twig #}
{# Page d'accueil du CFA #}
{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block meta_description %}Bienvenue au {{ cfa_name|default('CFA') }}. Accédez à votre espace personnel pour gérer vos absences, consulter vos évaluations et suivre votre parcours de formation.{% endblock %}

{% block body %}
    {# ========================================
       Section Hero avec logo central
       ======================================== #}
    <section class="hero">
        {# Éléments décoratifs #}
        <div class="hero__decoration hero__decoration--1"></div>
        <div class="hero__decoration hero__decoration--2"></div>
        <div class="hero__decoration hero__decoration--3"></div>
        
        <div class="hero__content">
            {# Zone du logo (centré) #}
            <div class="hero__logo-zone">
                <div class="hero__logo-container">
                    {% if cfa_logo_large is defined and cfa_logo_large %}
                        <img src="{{ asset('images/' ~ cfa_logo_large) }}" 
                             alt="Logo {{ cfa_name|default('CFA') }}" 
                             class="hero__logo-image">
                    {% else %}
                        {# Placeholder du logo #}
                        <div class="hero__logo-placeholder">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="3" width="18" height="18" rx="2"/>
                                <path d="M12 8v8"/>
                                <path d="M8 12h8"/>
                            </svg>
                            <span>Logo du CFA</span>
                        </div>
                    {% endif %}
                </div>
            </div>
            
            {# Titre et sous-titre #}
            <h1 class="hero__title">
                Bienvenue au <span>{{ cfa_name|default('CFA') }}</span>
            </h1>
            <p class="hero__subtitle">Centre de Formation des Apprentis</p>
            <p class="hero__tagline">
                {{ cfa_tagline|default('Accédez à votre espace personnel pour gérer vos absences, consulter vos évaluations et suivre votre parcours de formation.') }}
            </p>
            
            {# Boutons d'action #}
            {% if not app.user %}
                <div class="hero__actions">
                    <a href="{{ path('app_formations') }}" class="btn btn--primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M22 10v6M2 10l10-5 10 5-10 5z"/>
                            <path d="M6 12v5c3 3 9 3 12 0v-5"/>
                        </svg>
                        Nos formations
                    </a>
                    <a href="{{ path('app_contact') }}" class="btn btn--secondary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                            <polyline points="22,6 12,13 2,6"/>
                        </svg>
                        Nous contacter
                    </a>
                </div>
            {% else %}
                {# Utilisateur connecté : bouton vers le dashboard #}
                <div class="hero__actions">
                    <a href="{{ path('app_dashboard') }}" class="btn btn--accent">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="3" width="7" height="7"/>
                            <rect x="14" y="3" width="7" height="7"/>
                            <rect x="14" y="14" width="7" height="7"/>
                            <rect x="3" y="14" width="7" height="7"/>
                        </svg>
                        Accéder à mon espace
                    </a>
                </div>
            {% endif %}
        </div>
    </section>

    {# ========================================
       Section informations
       ======================================== #}
    <section class="info-section">
        <div class="container">
            <h2 class="info-section__title">Votre espace personnel</h2>
            
            <div class="info-cards">
                {# Carte Apprentis #}
                <article class="info-card">
                    <div class="info-card__icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                            <circle cx="9" cy="7" r="4"/>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                        </svg>
                    </div>
                    <h3 class="info-card__title">Apprentis</h3>
                    <p class="info-card__text">
                        Consultez vos absences, vos notes et évaluations. 
                        Suivez votre progression et téléchargez vos documents administratifs.
                    </p>
                </article>
                
                {# Carte Formateurs #}
                <article class="info-card">
                    <div class="info-card__icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/>
                            <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
                        </svg>
                    </div>
                    <h3 class="info-card__title">Formateurs</h3>
                    <p class="info-card__text">
                        Gérez les absences de vos groupes, saisissez les évaluations 
                        et suivez la progression de vos apprentis en temps réel.
                    </p>
                </article>
                
                {# Carte Administration #}
                <article class="info-card">
                    <div class="info-card__icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="3"/>
                            <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/>
                        </svg>
                    </div>
                    <h3 class="info-card__title">Administration</h3>
                    <p class="info-card__text">
                        Pilotez l'ensemble du CFA : gestion des formations, des promotions, 
                        des entreprises partenaires et génération des rapports.
                    </p>
                </article>
            </div>
        </div>
    </section>

    {# ========================================
       Section Chiffres clés (optionnelle)
       ======================================== #}
    {% if stats is defined %}
    <section class="stats-section">
        <div class="container">
            <div class="stats-grid">
                {% if stats.apprentis is defined %}
                <div class="stat-item">
                    <span class="stat-item__number">{{ stats.apprentis }}</span>
                    <span class="stat-item__label">Apprentis</span>
                </div>
                {% endif %}
                {% if stats.formations is defined %}
                <div class="stat-item">
                    <span class="stat-item__number">{{ stats.formations }}</span>
                    <span class="stat-item__label">Formations</span>
                </div>
                {% endif %}
                {% if stats.entreprises is defined %}
                <div class="stat-item">
                    <span class="stat-item__number">{{ stats.entreprises }}</span>
                    <span class="stat-item__label">Entreprises partenaires</span>
                </div>
                {% endif %}
                {% if stats.taux_reussite is defined %}
                <div class="stat-item">
                    <span class="stat-item__number">{{ stats.taux_reussite }}%</span>
                    <span class="stat-item__label">Taux de réussite</span>
                </div>
                {% endif %}
            </div>
        </div>
    </section>
    {% endif %}
{% endblock %}
